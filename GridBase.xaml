<UserControl x:Class="GridBase"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:POS1"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
   
    <Grid x:Name="CtrlGrid">
        <Frame Content="{Binding GridGenerator.Grid}"
               HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                   VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" Visibility="Visible"
                   
                   Height="{Binding Height, ElementName=CtrlGrid}"/>
    </Grid>
</UserControl>
