<Page x:Class="HomeBase"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:POS1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomeViewBase"
      Background="Azure">
   
    
    <Grid>
    <Grid x:Name="MainGrid">

        <Grid.RowDefinitions>
            <RowDefinition x:Name ="TopRow" Height="Auto"/>
            <RowDefinition x:Name="ContentRow" Height="*"/>

        </Grid.RowDefinitions>

        <Frame x:Name="TopBarContent" Grid.Row="0" 
               Content="{Binding TopBarPage}"
                        Height="{Binding ElementName=TopRow, Path=Height}"
               Margin="0,0,0,2"/>



            <Frame x:Name="Content" Grid.Row="1" 
               Content="{Binding ContentPage}"/>
        
     


    </Grid>
    </Grid>
</Page>
